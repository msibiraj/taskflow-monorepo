{
  "name": "taskflow-desktop-agent",
  "version": "1.0.0",
  "description": "TaskFlow Desktop Productivity Tracker",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:safe": "electron . --disable-gpu --no-sandbox 2>&1 | grep -v 'GetVSyncParametersIfAvailable'",
    "start:debug": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["productivity", "tracker", "electron"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "active-win": "^8.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.taskflow.desktop-agent",
    "productName": "TaskFlow Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
